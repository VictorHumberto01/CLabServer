# Server Configuration
PORT=8080
GIN_MODE=release

# Database Credentials
DB_USER=user
DB_PASSWORD=password
DB_NAME=clab

# Local Development Database URL (used by 'go run', ignored by docker-compose)
DATABASE_URL=host=localhost user=user password=password dbname=clab port=5432 sslmode=disable

# Authentication
JWT_SECRET=your-secret-key-here

# AI Provider: 'ollama' or 'groq'
AI_PROVIDER=groq

# Ollama Configuration
# Use http://host.docker.internal:11434 when running CLab in Docker to reach local Ollama
OLLAMA_URL=http://host.docker.internal:11434
OLLAMA_MODEL=llama3.2:1b

# Groq Configuration
# Get your API key at: https://console.groq.com
GROQ_API_KEY=your-groq-api-key-here
